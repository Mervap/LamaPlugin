        <variable name="FOR_BEFORE_EACH" expression="" defaultValue="" alwaysStopAt="true"/>
        <variable name="FOR_AFTER_EACH" expression="" defaultValue="" alwaysStopAt="true"/>
        <context>
            <option name="Lama" value="true"/>
        </context>
    </template>

</templateSet>