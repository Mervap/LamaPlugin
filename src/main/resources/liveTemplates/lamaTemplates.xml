        <context>
            <option name="Lama" value="true"/>
        </context>
    </template>

    <template name="while" value="while $WHILE_CONDITION$ do&#10;  $END$&#10;od&#10;"
              title="while expression" toReformat="true" toShortenFQNames="true">
        <variable name="WHILE_CONDITION" expression="" defaultValue="" alwaysStopAt="true"/>
        <context>
            <option name="Lama" value="true"/>
        </context>
    </template>

    <template name="for" value="for $FOR_BEFORE_ALL$, $FOR_BEFORE_EACH$, $FOR_AFTER_EACH$ do&#10;  $END$&#10;od&#10;"
              title="for expression" toReformat="true" toShortenFQNames="true">
